<div class="container">    
    <div class="banner banner--coloured banner--coloured-gray container container--remove-padding" 
    {{#if heroBanner.withBg}} 
        style="background-image:  linear-gradient(to right, rgba(142, 158, 171, 0.95),rgba(238, 242, 243, 0.95)), url('https://images.pexels.com/photos/457937/pexels-photo-457937.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260')" 
    {{/if}}
    >
        <div class="row row--no-margins">
            <div class="col-md-5 col-md-offset-1 col-sm-11 col-xs-11 col-sm-offset-1 col-xs-offset-1">
                <div class="banner__title">
                    <span class="titlewrapper">
                        <h1>
                            Convenient 
                            <br>
                            {{#if heroBanner.hasPinkText}}
                            <span class="text--color-pink">
                            {{/if}}
                            Comforting
                            {{#if heroBanner.hasPinkText}}
                            </span>
                            {{/if}}
                            <br>
                            Clothing
                        </h1>                                            
                        {{> @ctabutton--pink}}
                    </span>
                    
                </div>                
            </div>
            <div class="col-md-5 hidden-sm">
                <div class="banner__graphic-img">
                    {{#if heroBanner.isGray}}
                        <img src="/assets/images/girlmodelcrop.png" style="max-width: 40%" alt="">    
                    {{/if}}                                        
                </div>
            </div>
        </div>
    </div>            
</div>